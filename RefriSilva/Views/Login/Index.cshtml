<div class="d-flex justify-content-center">
    <form class="form-signin col-md-4" asp-action="Logar" style="margin-top: 50px">
        @if (TempData["Erro"] != null)
        {
            <div class="alert alert-danger">
                <span>Usuário ou senha incorretos</span>
            </div>
        }
        <div class="col-md-12 text-center">
            <h1>Refri Silva</h1>
        </div>
        <hr />
        <label for="inputEmail" class="sr-only">Email address</label>
        <input style="margin-bottom: 20px" type="text" name="Nome" id="Nome" class="form-control" placeholder="Login" required="" autofocus="">
        <label for="inputPassword" class="sr-only">Password</label>
        <input style="margin-bottom: 20px" type="password" id="Senha" name="Senha" class="form-control" placeholder="Senha" required="">
        <button class="btn btn-lg btn-primary btn-block" type="submit">Entrar</button>
    </form>
</div>